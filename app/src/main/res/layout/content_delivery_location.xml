<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inno3_gray_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_delivery_location"
        tools:context=".delivery_location">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/fab_margin"
                    android:orientation="vertical">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="สถานที่จัดส่ง"
                          android:textSize="@dimen/fab_margin"
                          android:layout_marginBottom="5dp"
                          android:paddingBottom="5dp"
                          android:layout_row="0"
                          android:layout_column="0"
                          android:background="@drawable/border_bottom_light_gray"
                          android:textColor="@color/colorBlueText"
                          android:textStyle="bold"/>
                <GridLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlack"
                              android:textSize="14dp"
                              android:layout_row="1"
                              android:layout_column="0"
                              android:text="1518/4 อาคารเก่งรุ่งเรืองชัย ชั้น 8 ถ.ประชาราษฏร์"/>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_navigate_next_black_24dp"
                            android:layout_row="1"
                            android:layout_column="2"/>
                </GridLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="รายละเอียดผู้ส่ง"
                          android:textSize="@dimen/fab_margin"
                          android:layout_marginBottom="5dp"
                          android:paddingBottom="5dp"
                          android:layout_row="0"
                          android:layout_column="0"
                          android:background="@drawable/border_bottom_light_gray"
                          android:textColor="@color/colorBlueText"
                          android:textStyle="bold"/>
                <GridLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/border_bottom_light_gray"
                            android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlack"
                              android:textSize="14dp"
                              android:layout_row="1"
                              android:layout_column="0"
                              android:text="คุณสมาน สามารถ"/>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_close_black_24dp"
                            android:layout_row="1"
                            android:layout_column="3"/>
                </GridLayout>
                <GridLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/border_bottom_light_gray"
                            android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/colorBlack"
                              android:textSize="14dp"
                              android:layout_row="1"
                              android:layout_column="0"
                              android:text="0891234567"/>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_close_black_24dp"
                            android:layout_row="1"
                            android:layout_column="3"/>
                </GridLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="สินค้า"
                          android:textSize="@dimen/fab_margin"
                          android:layout_marginBottom="5dp"
                          android:paddingBottom="5dp"
                          android:layout_row="0"
                          android:layout_column="0"
                          android:background="@drawable/border_bottom_light_gray"
                          android:textColor="@color/colorBlueText"
                          android:textStyle="bold"/>


                <GridLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="@dimen/app_bar_height"
                         android:paddingBottom="5dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/colorBlack"
                          android:textSize="14dp"
                          android:layout_row="1"
                          android:layout_column="0"
                          android:text="น้ำแข็งแห้ง (แบบแพ็ค)"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/colorBlack"
                        android:layout_row="1"
                        android:layout_column="3"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/colorBlack"
                          android:textSize="14dp"
                          android:layout_row="2"
                          android:layout_column="0"
                          android:text="น้ำแข็งแห้ง (แบบแพ็ค)"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/colorBlack"
                        android:layout_row="2"
                        android:layout_column="3"/>
            </GridLayout>


                <GridLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                    <Button
                            android:id="@+id/btn_link_tracking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ยืนยันคำสั่งซื้อ"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/inno3_green_bg"
                            android:paddingRight="35dp"
                            android:paddingLeft="35dp"/>
                </GridLayout>
            </LinearLayout>







</android.support.v4.widget.NestedScrollView>