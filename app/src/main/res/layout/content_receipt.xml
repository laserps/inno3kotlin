<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_receipt"
        android:background="@drawable/inno3_gray_bg"
        tools:context=".Receipt">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                app:cardBackgroundColor="@color/colorBgTransparent"
                android:orientation="horizontal">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/solid"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fab_margin"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:text="บริษัท ฟรีซโก้ จำกัด. "/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="INVOICE"/>
                    </GridLayout>
                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="1518/4 อาคารเก่งรุ่งเรืองชัย ชั้น 8 ห้อง 1 2,4 "/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlueText"
                                android:text="Invoice No: 001"/>
                    </GridLayout>
                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="ถนน ประชาราษฎร์ สาย 1 แขวงวง์สว่าง "/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="@color/collorDrakGray"
                                android:text="25 ธันวาคม 2560"/>
                    </GridLayout>
                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="เขต บางซื่อ กรุงเทพมหานคร 10800"/>
                    </GridLayout>
                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/fab_margin">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/border_bottom_light_gray"
                        />
                    </GridLayout>
                    <TableLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:stretchColumns="1">
                        <TableRow>
                            <TextView
                                    android:text="รายการ"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/fab_margin"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="ราคา"
                                    android:gravity="right"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/fab_margin"
                                    android:padding="3dip" />
                        </TableRow>

                    </TableLayout>
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">
                        <TableRow>
                            <TextView
                                    android:text="2"
                                    android:layout_marginRight="@dimen/fab_margin"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" android:layout_width="25dp"/>
                            <TextView
                                    android:text="น้ำแข็งก้อน (ก้อน)"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="฿ 100.00"
                                    android:gravity="right"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:text="2"
                                    android:layout_marginRight="@dimen/fab_margin"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="น้ำแข็งก้อน (ก้อน)"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="฿ 100.00"
                                    android:gravity="right"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:text="2"
                                    android:layout_marginRight="@dimen/fab_margin"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="น้ำแข็งก้อน (ก้อน)"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="฿ 100.00"
                                    android:gravity="right"
                                    android:textColor="@color/colorBlack"
                                    android:padding="3dip" />
                        </TableRow>
                    </TableLayout>
                    <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/fab_margin">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/border_bottom_light_gray"
                        />
                    </GridLayout>
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="1">
                        <TableRow>
                            <TextView
                                    android:text="ยอดรวม"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlueText"
                                    android:textSize="@dimen/fab_margin"
                                    android:padding="3dip" />
                            <TextView
                                    android:text="฿ 300.00"
                                    android:gravity="right"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlueText"
                                    android:textSize="@dimen/fab_margin"
                                    android:padding="3dip" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="@dimen/fab_margin">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ดาวห์โหลด"
                    android:paddingRight="@dimen/fab_margin"
                    android:paddingLeft="@dimen/fab_margin"
                    android:background="@color/colorBlueText"
                    android:textColor="@color/colorWhite"
                    android:drawableTint="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_pdf"/>

        </RelativeLayout>
</LinearLayout>

</android.support.v4.widget.NestedScrollView>