<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_home"
        tools:context=".HomeActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:background="@drawable/inno3_gray_bg"
                    tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/inno3_white_bg"
                android:orientation="vertical">

            <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="0dp">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/test_img" android:layout_row="0" android:layout_column="1"/>
            </GridLayout>

            <GridLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:text="น้ำแข็งแห้ง"
                        android:textColor="#38618f"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                <Spinner
                        android:id="@+id/spCountries"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="9"
                        android:entries="@array/weight"
                        android:fontFamily="@font/kanit"
                        android:spinnerMode="dialog"></Spinner>
            </GridLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_bottom"
                    android:fontFamily="@font/kanit"
                    android:text="ขนาด 6x6" />


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/fab_margin">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/kanit"
                        android:text="หน่วย"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                <Button
                        android:layout_width="37dp"
                        android:layout_height="38dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:background="@drawable/btn_circle_green"
                        android:text="-"
                        android:textColor="#ffffff"
                        android:textSize="22dp" />

                <TextView
                        android:id="@+id/integer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="22dp" />

                <Button
                        android:layout_width="37dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_circle_green"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:textSize="22dp" />
            </GridLayout>


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingRight="@dimen/fab_margin"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/kanit"
                        android:text="ราคา"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/kanit"
                        android:text="100 THB"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="normal" />
            </GridLayout>


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginBottom="30dp"
                    android:paddingRight="@dimen/fab_margin"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/kanit"
                        android:text="เลือกช่วงเวลาที่ต้องใช้"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:entries="@array/time"
                        android:fontFamily="@font/kanit"
                        android:spinnerMode="dialog"></Spinner>

            </GridLayout>
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>