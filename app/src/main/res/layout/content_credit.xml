<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_credit"
        tools:context=".Credit">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/inno3_gray_bg">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="109dp"
                    android:layout_alignParentTop="true">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="เครดิตคงเหลือ"/>

                <GridLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:paddingTop="45dp"
                        android:paddingBottom="45dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/inno3_solid_circle">

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:textSize="22dp"
                              android:textStyle="bold"
                              android:textColor="#3d70c2"
                              android:text="1000"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:textStyle="normal"
                              android:textColor="#3d70c2"
                              android:textSize="16dp"
                              android:text="THB"/>
                </GridLayout>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_link_credit"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fab_margin"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:background="@drawable/inno3_green_bg"
                        android:text="เติมเครดิต"/>


            </LinearLayout>


        </RelativeLayout>


</android.support.constraint.ConstraintLayout>