<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_confirm_order"
        android:background="@drawable/inno3_gray_bg"
        tools:context=".confirm_order">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inno3_gray_bg">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/ic_checked_ciecle_green"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ระบบทำการตัดยอดเงินเรียบร้อยแล้ว"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/fab_margin"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยอดเงินคงเหลือ"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/fab_margin"
                    android:layout_marginBottom="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 บาท"
                    android:textColor="#3d70c2"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ตกลง"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fab_margin"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:background="@color/colorGreen"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>