<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_payment"
        tools:context=".Payment">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@drawable/inno3_gray_bg"
            android:orientation="horizontal"
            android:padding="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">

            <GridLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/solid_card_bule">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit And Debit cards"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:buttonTint="@color/your_color"/>

                <ImageView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_visa"
                        android:background="@drawable/inno3_dark_bule_bg"
                        android:padding="2dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginRight="8dp"
                        android:layout_row="0"
                        android:layout_column="2"/>
                <ImageView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_mastercard"
                        android:background="@drawable/inno3_dark_bule_bg"
                        android:padding="2dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginRight="8dp"
                        android:layout_row="0"
                        android:layout_column="3"/>
                <ImageView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_maestro"
                        android:background="@drawable/inno3_dark_bule_bg"
                        android:padding="2dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginRight="8dp"
                        android:layout_row="0"
                        android:layout_column="4"/>
            </GridLayout>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin">

                <GridLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="-2dp"
                            android:padding="@dimen/activity_vertical_margin"
                            android:background="@drawable/solid_card_bule">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/kanit"
                            android:layout_marginBottom="3dp"
                            android:text="Cardholder Name"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:background="@drawable/solid_input"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:layout_marginBottom="3dp"
                            android:text="Card Number"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:background="@drawable/solid_input"
                            android:padding="5dp"/>
                </GridLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>