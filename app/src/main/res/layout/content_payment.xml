<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_payment"
        android:background="@drawable/inno3_gray_bg"
        tools:context=".PaymentActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/fab_margin">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radGroup1"
                        android:orientation="vertical">

                <RadioButton android:id="@+id/radio_credit"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="Credit and Debit cards"
                             android:drawableRight="@drawable/ic_payment"
                             android:background="@drawable/solid_card_bule"
                             android:padding="3dp"
                             android:checked="true"
                             android:onClick="onRadioButtonClicked"/>


                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/solid_card_bule"
                        android:backgroundTintMode="@color/colorWhite"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="@dimen/fab_margin"
                        android:id="@+id/mycredit">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardholder Name"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:layout_marginBottom="10dp"
                            android:padding="3dp"
                            android:inputType="text" />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cart Number"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:drawableRight="@drawable/ic_visa_icon_blue"
                            android:padding="3dp"
                            android:inputType="text" />


                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/fab_margin"
                            android:weightSum="7" >
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="End Date"
                                    android:textColor="@color/colorBlack"/>

                        </LinearLayout>



                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CVV"
                                        android:textColor="@color/colorBlack"/>
                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/fab_margin"
                            android:weightSum="7" >
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/solid_input"
                                    android:padding="3dp"
                                    android:hint="mm"
                                    android:inputType="text"/>

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                            <ImageView
                                    android:layout_height="22dp"
                                    android:layout_width="22dp"
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/ic_question_mark"
                                    android:layout_gravity="center"
                                    android:tint="@color/collorGray"/>


                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/solid_input"
                                    android:padding="3dp"
                                    android:hint="yyyy"
                                    android:inputType="number"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                            <ImageView
                                    android:layout_height="22dp"
                                    android:layout_width="22dp"
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/ic_question_mark"
                                    android:layout_gravity="center"
                                    android:tint="@color/collorGray"/>
                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/solid_input"
                                    android:padding="3dp"
                                    android:inputType="number"/>

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                            <ImageView
                                    android:layout_height="22dp"
                                    android:layout_width="22dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_question_mark"
                                    android:tint="@color/collorGray"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/collorDrakGray"
                                    android:text="3 digits"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="i have read and accept the terms of use,rules of flight and privacy polivy."
                                android:textColor="@color/colorBlack"
                                android:layout_marginBottom="@dimen/fab_margin"
                                android:textSize="10dp"/>
                        <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pay Now >>"
                                android:background="@drawable/inno3_payment_btn"
                                android:backgroundTint="@color/colorpaymentGreen"
                                android:textColor="@color/colorWhite"
                                android:textSize="20dp"
                                android:textStyle="bold"/>

                    </LinearLayout>

                </GridLayout>


                <RadioButton android:id="@+id/radio_banking"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:onClick="onRadioButtonClicked"
                             android:text="Online banking and Direct debit"/>

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginTop="-2dp"
                        android:id="@+id/mybanking">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardholder Name"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:layout_marginBottom="10dp"
                            android:padding="3dp"
                            android:inputType="text" />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cart Number"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:drawableRight="@drawable/ic_visa_icon_blue"
                            android:padding="3dp"
                            android:inputType="text" />

                </GridLayout>

                <RadioButton android:id="@+id/radio_paypal"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:onClick="onRadioButtonClicked"
                             android:text="Online banking and Direct debit"/>

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginTop="-2dp"
                        android:id="@+id/mypaypal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardholder Name"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:layout_marginBottom="10dp"
                            android:padding="3dp"
                            android:inputType="text" />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cart Number"
                            android:textColor="@color/colorBlack"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/solid_input"
                            android:drawableRight="@drawable/ic_visa_icon_blue"
                            android:padding="3dp"
                            android:inputType="text" />

                </GridLayout>

            </RadioGroup>






        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>