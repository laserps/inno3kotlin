<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_tracking"
        android:background="@drawable/inno3_gray_bg"
        tools:context=".TrackingActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingBottom="@dimen/fab_margin"
                    android:background="@drawable/inno3_navbar_bg"
                    android:stretchColumns="1">
                <TableRow android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin">
                    <TextView
                            android:text="21 พ.ย 2561 (8.00 น.)"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fab_margin"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="3dip" />
                    <TextView
                            android:text="หมายเลขสั่งซื้อ"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fab_margin"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:padding="3dip" />
                </TableRow>
                <TableRow android:paddingLeft="@dimen/fab_margin"
                          android:paddingRight="@dimen/fab_margin">
                    <TextView
                            android:text="ระยะเวลาในการจัดส่ง 2 ชั่วโมง"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="center"
                            android:padding="3dip" />
                    <TextView
                            android:text="12345"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="center"
                            android:padding="3dip" />
                </TableRow>
            </TableLayout>


            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fab_margin">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21/09/2015"
                            android:layout_row="0"
                            android:layout_column="0"
                    />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Est. 6:00"
                        android:textStyle="bold"
                        android:layout_row="1"
                        android:layout_column="0"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Est. 6:00"
                        android:textStyle="bold"
                        android:layout_row="2"
                        android:layout_column="0"
                />
            </GridLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>